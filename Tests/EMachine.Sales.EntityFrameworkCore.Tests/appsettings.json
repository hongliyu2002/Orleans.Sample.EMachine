{
    "Serilog": {
        "Using": [
            "Serilog.Enrichers.Environment",
            "Serilog.Enrichers.Process",
            "Serilog.Enrichers.Thread",
            "Serilog.Sinks.Async",
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "System": "Warning",
                "Microsoft": "Warning"
            }
        },
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithProcessId",
            "WithThreadId"
        ],
        "WriteTo:Async": {
            "Name": "Async",
            "Args": {
                "configure": [
                    {
                        "Name": "Console"
                    },
                    {
                        "Name": "File",
                        "Args": {
                            "path": "./Logs/log.txt",
                            "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message}{NewLine}{Exception}"
                        }
                    }
                ]
            }
        }
    },
    "Persistence": {
        "Repositories": {
            "Sales": {
                "ProviderName": "EntityFrameworkCore",
                "DatabaseName": "Sales",
                "DatabaseNamePrefix": "",
                "ConnectionStringName": "SalesDB",
                "RepositoryContextType": "EMachine.Sales.EntityFrameworkCore.Contexts.SalesRepositoryContext, EMachine.Sales.EntityFrameworkCore",
                "DbContextType": "EMachine.Sales.EntityFrameworkCore.Contexts.SalesDbContext, EMachine.Sales.EntityFrameworkCore",
                "EnableUnitOfWork": true,
                "EnableAutomaticCrudDomainEvents": false
            }
        }
    },
    "ConnectionStrings": {
        "SalesDB": "Data Source=Sales.db"
    }
}