{
    "Serilog": {
        "Using": [
            "Serilog.Enrichers.Environment",
            "Serilog.Enrichers.Process",
            "Serilog.Enrichers.Thread",
            "Serilog.Sinks.Async",
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "System": "Warning",
                "Microsoft": "Warning"
            }
        },
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithProcessId",
            "WithThreadId"
        ],
        "WriteTo:Async": {
            "Name": "Async",
            "Args": {
                "configure": [
                    {
                        "Name": "Console"
                    },
                    {
                        "Name": "File",
                        "Args": {
                            "path": "./Logs/log.txt",
                            "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message}{NewLine}{Exception}"
                        }
                    }
                ]
            }
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "Cluster": "Data Source=Sales.db"
    },
    "Orleans": {
        "Redis": {
            "Clustering": {
                "ConnectionStringName": "Cluster"
            },
            "ReminderTable": {
                "ConnectionStringName": "Reminder"
            },
            "Storage": {
                "ConnectionStringNames": [
                    "Test"
                ]
            }
        }
    }
}
