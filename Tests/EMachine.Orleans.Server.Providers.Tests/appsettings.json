{
    "Serilog": {
        "Using": [
            "Serilog.Enrichers.Environment",
            "Serilog.Enrichers.Process",
            "Serilog.Enrichers.Thread",
            "Serilog.Sinks.Async",
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "System": "Warning",
                "Microsoft": "Warning"
            }
        },
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithProcessId",
            "WithThreadId"
        ],
        "WriteTo:Async": {
            "Name": "Async",
            "Args": {
                "configure": [
                    {
                        "Name": "Console"
                    },
                    {
                        "Name": "File",
                        "Args": {
                            "path": "./Logs/log.txt",
                            "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message}{NewLine}{Exception}"
                        }
                    }
                ]
            }
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "SalesDatabase": "Data Source=Sales.db",
        "RedisCluster": "localhost:6379",
        "RedisGrainDirectory": "localhost:6379",
        "RedisReminder": "localhost:6379",
        "RedisStorage-Test": "localhost:6379",
        "RedisServer": "localhost:6379"
    },
    "Orleans": {
        "Redis": {
            "Clustering": {
                "ConnectionStringName": "RedisCluster"
            },
            "GrainDirectory": {
                "ConnectionStringName": "RedisGrainDirectory"
            },
            "ReminderTable": {
                "ConnectionStringName": "RedisReminder"
            },
            "Storage": {
                "ConnectionStringNames": [
                    "RedisStorage-Test"
                ]
            }
        }
    },
    "Sales": {
        "Database": {
            "ConnectionStringName": "SalesDatabase",
            "DatabaseProvider": "Sqlite",
            "QuerySplittingBehavior": "SplitQuery"
        }
    }
}
